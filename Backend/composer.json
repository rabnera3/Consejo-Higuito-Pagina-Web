{
  "name": "cih/backend",
  "description": "Backend PHP para el Consejo Intermunicipal Higuito",
  "type": "project",
  "require": {
    "php": "^7.4 || ^8.1",
    "slim/slim": "^4.13",
    "slim/psr7": "^1.5",
    "slim/twig-view": "^3.4",
    "twig/twig": "^3.0",
    "vlucas/phpdotenv": "^5.6",
    "illuminate/database": "^8.83",
    "monolog/monolog": "^2.9",
    "firebase/php-jwt": "^6.10"
  },
  "require-dev": {
    "symfony/var-dumper": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "src/Support/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S 0.0.0.0:8080 -t public public/index.php"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "process-timeout": 0
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}